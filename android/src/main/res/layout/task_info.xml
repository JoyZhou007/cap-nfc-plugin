<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="3dip"
    android:paddingRight="3dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_proirity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_priority"
                android:gravity="center"
                android:layout_marginTop="20dip"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textColor="#000000"
                android:textSize="55sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_parttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chiron"
                    android:layout_marginRight="10dip"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_parttypeversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H001"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_tasknumber"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:text="danfoss_202001120005"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_partNumber"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:text="202001120005"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_inspectioncategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="SPC抽检"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_partCount"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginTop="0.5dip"
                android:layout_weight="1"
                android:text="004"
                android:textColor="#000000"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_taskstatus"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:paddingTop="3dip"
                android:text="已提交"
                android:visibility="gone"
                android:textColor="#000000"
                android:textSize="13sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_gravity="right"
            android:layout_marginTop="8dip"
            android:background="@drawable/shape_circular"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="UN"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:layout_marginTop="8dip"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
